# Discord Bot Configuration
# Get these values from https://discord.com/developers/applications

# Required: Bot token from Discord Developer Portal (Bot tab)
DISCORD_BOT_TOKEN=your_bot_token_here

# Required: Application ID from Discord Developer Portal (General Information tab)
CLIENT_ID=your_client_id_here

# Optional: Server ID (if not provided, commands are registered globally)
# Leave empty or remove this line to register commands globally
GUILD_ID=your_guild_id_here

# Turso Database Configuration (for Discord message archiving)
# Create a database at https://turso.tech and get credentials via:
#   turso db show <db-name> --url
#   turso db tokens create <db-name>
TURSO_DB_URL=libsql://your-discord-database.turso.io
TURSO_AUTH_TOKEN=your_auth_token_here

# Turso Ephemeral Database (for WhatsApp and other platforms)
# Separate database for non-Discord platforms
TURSO_EPHEMERAL_DB_URL=libsql://your-ephemeral-database.turso.io
TURSO_EPHEMERAL_AUTH_TOKEN=your_ephemeral_auth_token_here

OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-sonnet-4.5